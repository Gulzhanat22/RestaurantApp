@model RestaurantApp.Models.Order

@{
    ViewBag.Title = "Details";
}

<h2>Детали заказа</h2>

<div>
    <h4>Заказ №@Html.DisplayFor(model => model.Id)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.User.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User.Email)
        </dd>

        <dt>
            На имя
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Время заказа
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderTime)
        </dd>

        <dt>
            Тип оплаты
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PaymentType)
        </dd>


    </dl>
</div>


<table class="table">
    <tr>
        <th>Меню</th>
        <th>Количество</th>
        <th>Цена</th>
        <th>Статус</th>
    </tr>
    @if (Model.OrderDetails == null)
    {
        <tr>no items found</tr>
    }
    else
    {
        foreach (var item in Model.OrderDetails)
        {
<tr>
    <td>@item.Menu.Name</td>
    <td>@item.Quantity</td>
    <td>@item.Price</td>
    <td>@item.Status</td>
</tr>
        }

    }


</table>
<p>
    @Html.ActionLink("Назад", "Index")
</p>
